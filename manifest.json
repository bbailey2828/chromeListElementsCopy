{
    "manifest_version": 2,
    "name": "List Copy",
    "version": "1.18",
    "description": "Copy lists as plain text",
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "headphones_16.png",
        "48": "headphones_48.png",
        "128": "headphones_128.png"
    }
}