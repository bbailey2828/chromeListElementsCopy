{
    "manifest_version": 3,
    "name": "List Copy",
    "version": "1.7",
    "description": "Copy lists as plain text",
    "permissions": ["contextMenus", "activeTab"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}
