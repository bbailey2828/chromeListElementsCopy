{
    "manifest_version": 2,
    "name": "List Copy",
    "version": "1.4",
    "description": "Copy lists as plain text",
    "permissions": ["contextMenus"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
}
